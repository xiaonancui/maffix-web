# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Frontend API endpoint (adjust for production)
NEXT_PUBLIC_API_URL="http://localhost:3001/api"

# Backend server configuration
PORT=3001
API_PREFIX="api"
CORS_ORIGINS="http://localhost:3000,https://your-frontend-domain.com"

# -----------------------------------------------------------------------------
# Payment Integration (Klarna)
# -----------------------------------------------------------------------------
# Get these from your Klarna merchant portal
KLARNA_USERNAME="your-klarna-username"
KLARNA_PASSWORD="your-klarna-password"
KLARNA_BASE_URL="https://api.playground.klarna.com"  # Use https://api.klarna.com for production

# -----------------------------------------------------------------------------
# Environment Configuration
# -----------------------------------------------------------------------------
NODE_ENV="development"  # development | production | test
LOG_LEVEL="debug"       # error | warn | info | debug

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# Session configuration
SESSION_SECRET="your-session-secret"
SESSION_MAX_AGE=604800000    # 7 days in milliseconds

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=10485760       # 10MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# -----------------------------------------------------------------------------
# Email Configuration (Optional)
# -----------------------------------------------------------------------------
# SMTP settings for email notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@tententen.com"

# -----------------------------------------------------------------------------
# Analytics and Monitoring (Optional)
# -----------------------------------------------------------------------------
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Sentry for error tracking
SENTRY_DSN="your-sentry-dsn"

# -----------------------------------------------------------------------------
# Development Tools
# -----------------------------------------------------------------------------
# Enable/disable development features
ENABLE_API_DOCS=true         # Enable Swagger documentation
ENABLE_QUERY_LOGGING=false   # Log database queries
ENABLE_CORS_DEBUG=false      # Debug CORS issues

# -----------------------------------------------------------------------------
# Setup Instructions
# -----------------------------------------------------------------------------
# 1. Copy this file to .env.local: cp .env.example .env.local
# 2. Copy frontend template: cp frontend/.env.example frontend/.env.local
# 3. Copy backend template: cp backend/.env.example backend/.env.local
# 4. Fill in all the required values above
# 5. Restart your development servers after making changes
# 
# For production deployment:
# - Use strong, unique secrets for all keys
# - Enable HTTPS and update URLs accordingly
# - Use production database and service URLs
# - Configure proper CORS origins
# - Set NODE_ENV to "production"
# =============================================================================
