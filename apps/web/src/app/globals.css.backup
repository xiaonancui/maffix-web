@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    /* Light mode (not used, but kept for compatibility) */
    --background: 0 0% 100%;
    --foreground: 0 0% 3.9%;
    --card: 0 0% 100%;
    --card-foreground: 0 0% 3.9%;
    --popover: 0 0% 100%;
    --popover-foreground: 0 0% 3.9%;
    --primary: 0 72% 66%; /* #FF5656 */
    --primary-foreground: 0 0% 100%;
    --secondary: 0 0% 96.1%;
    --secondary-foreground: 0 0% 9%;
    --muted: 0 0% 96.1%;
    --muted-foreground: 0 0% 45.1%;
    --accent: 0 72% 66%; /* #FF5656 */
    --accent-foreground: 0 0% 100%;
    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 0 0% 98%;
    --border: 0 0% 89.8%;
    --input: 0 0% 89.8%;
    --ring: 0 72% 66%; /* #FF5656 */
    --radius: 0.5rem;
    --chart-1: 12 76% 61%;
    --chart-2: 173 58% 39%;
    --chart-3: 197 37% 24%;
    --chart-4: 43 74% 66%;
    --chart-5: 27 87% 67%;
  }

  .dark {
    /* Dark mode - Maffix custom theme */
    --background: 0 0% 3.9%; /* #0a0a0a */
    --foreground: 0 0% 100%; /* #ffffff */
    --card: 0 0% 10.2%; /* #1a1a1a */
    --card-foreground: 0 0% 100%;
    --popover: 0 0% 10.2%; /* #1a1a1a */
    --popover-foreground: 0 0% 100%;
    --primary: 0 72% 66%; /* #FF5656 - Main brand color */
    --primary-foreground: 0 0% 100%;
    --secondary: 0 0% 14.9%;
    --secondary-foreground: 0 0% 100%;
    --muted: 0 0% 14.9%;
    --muted-foreground: 0 0% 63.9%;
    --accent: 0 72% 66%; /* #FF5656 */
    --accent-foreground: 0 0% 100%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 0 0% 100%;
    --border: 0 72% 66% / 0.2; /* red-500/20 */
    --input: 0 0% 14.9%;
    --ring: 0 72% 66%; /* #FF5656 */
    --chart-1: 0 72% 66%; /* Red */
    --chart-2: 280 65% 60%; /* Purple */
    --chart-3: 200 70% 50%; /* Blue */
    --chart-4: 160 60% 45%; /* Green */
    --chart-5: 30 80% 55%; /* Orange */
  }
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
  }
}

@layer utilities {
  /* Animation delays */
  .animation-delay-500 {
    animation-delay: 500ms;
  }
  .animation-delay-1000 {
    animation-delay: 1000ms;
  }
  .animation-delay-1500 {
    animation-delay: 1500ms;
  }
  .animation-delay-2000 {
    animation-delay: 2000ms;
  }
  .animation-delay-2500 {
    animation-delay: 2500ms;
  }
  .animation-delay-3000 {
    animation-delay: 3000ms;
  }

  /* Text gradient utilities */
  .text-gradient {
    @apply bg-gradient-to-r from-purple-600 to-blue-600 bg-clip-text text-transparent;
  }

  .text-gradient-reverse {
    @apply bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent;
  }

  /* Backdrop blur utilities */
  .glass {
    @apply bg-white/10 backdrop-blur-md border border-white/20;
  }

  .glass-dark {
    @apply bg-black/10 backdrop-blur-md border border-black/20;
  }
}
