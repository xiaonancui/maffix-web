# =============================================================================
# Frontend Environment Variables (Next.js + Refine)
# =============================================================================
# Copy this file to .env.local in the frontend directory
# Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# =============================================================================

# -----------------------------------------------------------------------------
# NextAuth.js Configuration
# -----------------------------------------------------------------------------
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-key"
NEXTAUTH_URL="http://localhost:3000"

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Backend API endpoint - adjust for your environment
NEXT_PUBLIC_API_URL="http://localhost:3001/api"

# WebSocket endpoint for real-time features
NEXT_PUBLIC_WS_URL="ws://localhost:3001"

# -----------------------------------------------------------------------------
# Supabase Configuration (Client-side)
# -----------------------------------------------------------------------------
# Public keys - safe to expose to the browser
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# -----------------------------------------------------------------------------
# OAuth Providers
# -----------------------------------------------------------------------------
# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Discord OAuth (Optional)
DISCORD_CLIENT_ID="your-discord-client-id"
DISCORD_CLIENT_SECRET="your-discord-client-secret"

# -----------------------------------------------------------------------------
# Payment Integration (Client-side)
# -----------------------------------------------------------------------------
# Klarna public configuration
NEXT_PUBLIC_KLARNA_CLIENT_ID="your-klarna-client-id"

# -----------------------------------------------------------------------------
# Analytics and Tracking
# -----------------------------------------------------------------------------
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Hotjar (Optional)
NEXT_PUBLIC_HOTJAR_ID="your-hotjar-id"

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable/disable features in development
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PAYMENTS=true
NEXT_PUBLIC_ENABLE_REAL_TIME=true
NEXT_PUBLIC_ENABLE_PWA=false

# -----------------------------------------------------------------------------
# App Configuration
# -----------------------------------------------------------------------------
# App metadata
NEXT_PUBLIC_APP_NAME="TenTenTen Web"
NEXT_PUBLIC_APP_DESCRIPTION="Independent musician fan engagement platform"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Default pagination
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# File upload limits (client-side validation)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760  # 10MB in bytes
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# -----------------------------------------------------------------------------
# Theme and UI Configuration
# -----------------------------------------------------------------------------
# Default theme settings
NEXT_PUBLIC_DEFAULT_THEME="light"  # light | dark | system
NEXT_PUBLIC_PRIMARY_COLOR="#3B82F6"
NEXT_PUBLIC_SECONDARY_COLOR="#8B5CF6"

# -----------------------------------------------------------------------------
# Development Configuration
# -----------------------------------------------------------------------------
# Development tools
NEXT_PUBLIC_ENABLE_DEVTOOLS=true
NEXT_PUBLIC_ENABLE_REDUX_DEVTOOLS=true

# API debugging
NEXT_PUBLIC_DEBUG_API=false
NEXT_PUBLIC_LOG_LEVEL="info"  # error | warn | info | debug

# -----------------------------------------------------------------------------
# CDN and Assets
# -----------------------------------------------------------------------------
# CDN for static assets (Optional)
NEXT_PUBLIC_CDN_URL=""

# Image optimization
NEXT_PUBLIC_IMAGE_DOMAINS="your-project.supabase.co,images.unsplash.com"

# -----------------------------------------------------------------------------
# Social Media Integration (Optional)
# -----------------------------------------------------------------------------
# Social sharing
NEXT_PUBLIC_TWITTER_HANDLE="@tententen"
NEXT_PUBLIC_FACEBOOK_APP_ID="your-facebook-app-id"

# -----------------------------------------------------------------------------
# Localization (Optional)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_DEFAULT_LOCALE="en"
NEXT_PUBLIC_SUPPORTED_LOCALES="en,es,fr,de,ja"

# -----------------------------------------------------------------------------
# Performance Monitoring
# -----------------------------------------------------------------------------
# Sentry (Client-side error tracking)
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"
NEXT_PUBLIC_SENTRY_ENVIRONMENT="development"

# Web Vitals tracking
NEXT_PUBLIC_ENABLE_WEB_VITALS=true

# -----------------------------------------------------------------------------
# Setup Instructions
# -----------------------------------------------------------------------------
# 1. Copy this file to .env.local in the frontend directory
# 2. Update NEXT_PUBLIC_API_URL to match your backend server
# 3. Configure Supabase URLs and keys from your project dashboard
# 4. Set up OAuth providers and add their credentials
# 5. Configure analytics and monitoring tools as needed
# 6. Restart the Next.js development server after changes
#
# Production Notes:
# - Update all URLs to use HTTPS
# - Use production Supabase project
# - Configure proper OAuth redirect URLs
# - Enable analytics and monitoring
# - Set feature flags appropriately
# =============================================================================
